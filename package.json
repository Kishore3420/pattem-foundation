{
  "name": "pattem-foundation",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky install",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "lint:fix": "eslint --fix \"**/*.{js,jsx,ts,tsx}\"",
    "lint:check": "eslint \"**/*.{js,jsx,ts,tsx}\"",
    "test:file": "jest --config jest.config.js",
    "test:coverage:file": "jest --coverage --config jest.config.js",
    "lint:file": "eslint --fix",
    "format:file": "prettier --write",
    "sonar": "sonar-scanner",
    "quality": "npm run lint:check && npm run test:coverage && npm run format:check",
    "quality:file": "npm run lint:file && npm run test:file && npm run format:file",
    "precommit": "npm run quality",
    "prepush": "npm run quality",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "jest --bail --findRelatedTests"
    ],
    "*.{json,md,css,scss,html,yml,yaml}": [
      "prettier --write"
    ],
    "*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@types/axios": "^0.9.36",
    "axios": "^1.8.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^3.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@eslint/eslintrc": "^3.3.1",
    "@next/eslint-plugin-next": "^15.3.1",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-interactions": "^8.6.12",
    "@storybook/addon-links": "^8.6.12",
    "@storybook/addon-onboarding": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/nextjs": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/testing-library": "^0.2.1",
    "@storybook/types": "^8.6.12",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8",
    "eslint-config-next": "^15.3.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.2",
    "next": "^15.3.1",
    "postcss": "^8.5.3",
    "prettier": "^3.2.5",
    "sonarqube-scanner": "^4.3.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5"
  }
}
